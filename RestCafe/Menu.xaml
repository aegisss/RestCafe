        mc:Ignorable="d"
        WindowStyle="None"
        Background="#505050"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Width="120" Height="50" Foreground="White" Background="#bc3cb4" Content="Назад" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="Button_Click"/>
